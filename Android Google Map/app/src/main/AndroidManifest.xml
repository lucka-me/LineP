<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lab.chd.patroline.gmap">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="lab.chd.patroline.gmap.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="lab.chd.patroline.gmap.PreferenceActivity"
            android:label="@string/pref_title"
            android:screenOrientation="portrait"
            android:parentActivityName="lab.chd.patroline.gmap.MainActivity" />

        <activity
            android:name="lab.chd.patroline.gmap.PreferenceAboutActivity"
            android:label="@string/pref_about_title"
            android:screenOrientation="portrait"
            android:parentActivityName="lab.chd.patroline.gmap.PreferenceActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="lab.chd.patroline.gmap.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="API_KEY"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>

</manifest>
